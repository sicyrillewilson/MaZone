<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:flow_horizontalBias="1"
    android:layout_centerHorizontal="true"
    android:paddingVertical="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="142dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center">

            <TextView
                android:id="@+id/descriptionTextViewAU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Description"
                android:fontFamily="serif"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/usernameAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login : "
                        android:fontFamily="serif"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/usernameTextViewAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:fontFamily="serif"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/passwordAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password : "
                        android:fontFamily="serif"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/passwordTextViewAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:fontFamily="serif"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/priceAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prix : "
                        android:fontFamily="serif"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/priceTextViewAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:fontFamily="serif"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/timeHHMMAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DurÃ©e : "
                        android:fontFamily="serif"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/timeHHMMTextViewAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TimeHHMM"
                        android:fontFamily="serif"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/timeLeftAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temps Restant : "
                        android:fontFamily="serif"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/timeLeftTextViewAU"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temps Restant"
                        android:fontFamily="serif"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>